library ieee;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;

entity mux_1 is port ( 
	pb30		:	in std_logic_vector(3 downto 0);
	DIN1		:	in std_logic_vector(7 downto 0);
	DIN2		:	in std_logic_vector(7 downto 0);
	DOUT		:	out std_logic_vector(7 downto 0)
);
end entity mux_1;

architecture Choice of mux_1 is

	signal concatenate : std_logic_vector(7 downto 0);
	signal sum : std_logic_vector(7 downto 0);
	signal inverted_pb30 : std_logic_vector(3 downto 0);

begin

	inverted_pb30 <= NOT pb30;	-- to invert push buttons
	concatenate <= DIN1;
	sum <= DIN2;
	
   with inverted_pb30 select			
	DOUT	<= sum when "1000",				-- when only pb3 is pressed
				concatenate when "0000",
				concatenate when "0100",
				concatenate when "0010",
				concatenate when "0001",
				"10001000" when others;    -- to display 8's when two or more push buttons are pressed

end architecture Choice;
